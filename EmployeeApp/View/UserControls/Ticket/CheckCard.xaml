<UserControl x:Class="EmployeeApp.View.UserControls.Ticket.CheckCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmployeeApp.View.UserControls.Ticket"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="1000" d:DesignWidth="800">
    <Grid>

        <!-- Задний фон (карточка) -->
        <Rectangle Grid.RowSpan="3" Grid.ColumnSpan="3" Panel.ZIndex="0"
                   Fill="White" RadiusX="8" RadiusY="8" StrokeThickness="0" 
                   Effect="{DynamicResource MaterialDesignElevationShadow1}" />

        <!-- Содержимое -->
        <StackPanel Margin="25">

            <TextBlock VerticalAlignment="Center"
                       FontSize="25"
                       Text="Заказ №1" />
            
            

        </StackPanel>
        
    </Grid>
    
</UserControl>